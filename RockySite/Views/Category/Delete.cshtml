@model RockySite.Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden  />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-danger pl-3 text-center">Are you sure you want to delete this category?</h2>
        </div>

        <br />

        <div class="row">
            <div class="col-8">
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-5 row">

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>
