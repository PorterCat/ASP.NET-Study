@model RockySite.Models.Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-success pl-3">Delete Product</h2>
        </div>

        <br />

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>

                </div>
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Price" class="form-control" />
                    </div>

                </div>

                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea disabled asp-for="Description" class="form-control summernote"> </textarea>
                    </div>

                </div>
                
                <br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Category.Name" class="form-control" />
                    </div>

                </div>

                <br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">

                        <button type="submit" onclick="return validateInput()" class="btn btn-danger w-100" value="Create">Delete</button>

                        </div>
                        <div class="col">
                            <a asp-action="Index" type="submit" class="btn btn-danger w-100"><i class="fas fa-sign-out-alt"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });
    </script>
}
